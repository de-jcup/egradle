      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="egradle.toolbars.sampleToolbar"
               label="EGradle Toolbar">
            <command
                  commandId="egradle.commands.refreshEclipse"
                  icon="icons/refreshAllEclipseDependencies.gif"
                  id="egradle.toolbars.sampleCommand"
                  label="Refresh"
                  tooltip="Refresh all eclipse dependencies of current root project">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml">
      </toc>
      <toc
            file="EGradleToc.xml"
            primary="true">
      </toc>
   </extension>
