	<!-- Launch group-->
	<extension point = "org.eclipse.debug.ui.launchGroups">
		<launchGroup
			id = "de.jcup.egradle.launchGroup"
			mode = "run"
			category = "de.jcup.egradle.category"
			label = "EGradle"
			image = "icons/gradle-og.gif"
			bannerImage = "icons/gradle-og.gif">
		</launchGroup>
	</extension> 
	<!-- Launch toolbar-->
	<extension point="org.eclipse.ui.actionSets">
        <actionSet
              label="EGradle Action Set"
              visible="true"
  	            id="de.jcup.egradle.launch.actionSet">
  	         <action
  	               label="Relaunch last EGradle commands"
  	               icon="icons/gradle-og.gif"
  	               class="de.jcup.egradle.eclipse.launch.EGradleLaunchToolbarAction"
  	               tooltip="Debug last launch with egradle"
  	               menubarPath="org.eclipse.ui.run/relaunchGroup"
  	               toolbarPath="org.eclipse.debug.ui.launchActionSet/debug"
  	               id="de.jcup.egradle.eclipse.launch.action"
  	               style="pulldown">
  	               
  	         </action>
  	      </actionSet>
  	   </extension>
